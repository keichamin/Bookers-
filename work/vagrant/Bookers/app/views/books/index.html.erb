<% if flash[:notice] %>
  <p><%= flash[:notice] %></p>
<% end %>

<h1>Books</h1>
<table>
   <thead>
   <tr>
     <th>title</th>
     <th>body</th>
   </tr>
</thead>

<tbody>
  <% @books.each do |book| %>
<tr>
  <td>
    <%= book.title %>
  </td>
  <td>
    <%= book.body %>
  </td>
  <td>
    <%= link_to "Show", book_path(book.id) %>
    <%= link_to "Edit", edit_book_path(book.id) %>
    <%= link_to "Destroy", destroy_books_path(book.id), method: :delete, "data-confirm" => "Are you sure?" %>
  </td>
</tr>
<% end %>
</tbody>
</table>

<h1>New Book</h1>
<%= form_for(@book, url: '/books') do |f| %>
<%= render partial: "layouts/error_messages", locals: { book: @book } %>
  <h4>Title</h4>
  <%= f.text_field :title %>
  <h4>Body</h4>
  <%= f.text_area :body %>
  <%= f.submit 'Create Book' %>
<% end %>

